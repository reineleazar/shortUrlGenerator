<link href="/public/stylesheet.css" rel="stylesheet">
<div class="container-fluid center">
<form  method="POST" action="/register">
    <div class="mb-3">
      <label  class="col-sm-2 col-form-label">Username</label><!--username label here-->
      <div class="col-sm-10">
        <input type="text" class="form-control" id="username"name="username"><!--usrname input heree-->
      </div>
    </div>
    <div class="mb-3">
      <label  class="col-sm-2 col-form-label">Email</label><!--username label here-->
      <div class="col-sm-10">
        <% if (message) {%>
          <input type="text" class="form-control" id="email"name="email">
          <% } else { %>
            <input type="text" class="form-control is-invalid" id="email"name="email">
          <div id="validationServerUsernameFeedback" class="invalid-feedback">
             Email is already taken by another user
            </div>
          <% } %>
      </div>

      
    </div>
    <div class="mb-3">
      <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label><!--password label here-->
      <div class="col-sm-10">
        <input type="password" class="form-control" name="password" id="password"><!--password input here-->
      </div>
    </div>
   

    <button type="submit" class="btn btn-primary col-sm-10
    ">Register</button>
  </form>
</div>