<script>
    function copyLink(x) {
  navigator.clipboard.writeText(x);

  /* Alert the copied text */
  alert("Copied the text: " + x);
  }
</script>

<body>   
    <% shortLink.forEach((user)=>{ %>
    <h3>  <%= user.username %></h3>    
    <table class="table">
        <thead>
            <th scope="col">Title</th>
            <th scope="col">Name</th>
            <th scope="col">Short URL</th>
            <th scope="col">Full URL</th>
            <th scope="col"><%= user.name%></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </thead>
        <tbody>
            <% user.shortUrl.forEach((link,index) => { %>
                <tr>
                    <td><%= link.title %></td>   
                    <td><%= link.name %></td>   
                    <td id="shortLink">localhost:3000/<%= link.name %></td>  
                    <td><%= link.fullLink%></td>   
                             
                </tr>
            <% })%>
           
        </tbody>
        </table>
    <% }) %>
</body>
</html>

