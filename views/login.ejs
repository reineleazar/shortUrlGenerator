  <!DOCTYPE html>
  <html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
      <title>Login</title>
      <link href="/public/stylesheet.css" rel="stylesheet">
      <link rel="icon" href="/public/deped-logo.png" type="image/x-icon" />
  </head>
  <body>
    <section>
      
      <nav class="navbar navbar-expand navbar-light">
      <div class="container-fluid">
          <img src="/public/deped-logo.png" />
        </div>
        
          <a class="btn btn-primary btn-sm" href="/register">Register</a>
        
      </nav>
    </section>
    <section>
      <div class="container-fluid center">
        <form action="/login" class="align-self-center" method="POST">
           <div class="mb-3"> <!-- username textbox -->
            <label for="inputEmail3" class="col-sm col-form-label">E-mail Address: </label><!--username label here-->
            <div class="col-sm-10">
              <!-- <input type="text" class="form-control" id="email" name="email">usrname input heree -->
              <% if((messages.error) == "email") {%>
              <input type="text" class="form-control is-invalid" id="email" name="email"><!--usrname input heree-->
              <div id="validationServerUsernameFeedback" class="invalid-feedback">
                Invalid Email
              </div>
              <% } else if ((messages.error) == 'Missing credentials') { %>
                <input type="text" class="form-control is-invalid" id="email" name="email">              
              <% } else { %>  
                <input type="text" class="form-control" id="email" name="email"><!--usrname input heree-->
                <% } %> 
            </div>
          </div> 
         
          <div class="mb-3"> <!-- passwor textbox -->
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password: </label><!--password label here-->
            <div class="col-sm-10">
              <!-- <input type="password" class="form-control" id="password" name="password">password input here -->
              <% if((messages.error) == "password") {%>
              <input type="password" class="form-control is-invalid" id="password" name="password"><!--password input here-->
              <div id="validationServerUsernameFeedback" class="invalid-feedback">
               Password Incorrect
              </div> 
              <% } else if ((messages.error) == 'Missing credentials') { %>
                <input type="password" class="form-control is-invalid" id="password" name="password">
                <div id="validationServerUsernameFeedback" class="invalid-feedback">
                  Missing credentials
                 </div>  
                 
              <% } else{ %>  
                <input type="password" class="form-control" id="password" name="password"><!--password input here-->
                <% } %> 
            </div>
          </div>
         
         
          <button type="submit" class="btn btn-primary col-sm-10">Sign in</button>
      </form>
     
      
    </div>
  </section>
  </body>
  </html>
